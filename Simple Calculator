#include <iostream>
using namespace std ;
int main () {
int sum1,sum2 ;
char RESULTS ; 
cout<<"ENTER THE VALUE OF (sum1) : ";
cin>>sum1;
cout<<"ENTER THE VALUE OF (sum2) : ";
cin>>sum2;
cout<<" ENTER THE RESULTS ( + or - or * or / or %) :";
cin>>RESULTS;
//SWITCH STATEMENT
switch (RESULTS)
  {
case '+' :
cout<<"ADDITION OF TWO NUMBERS (a + b) :" <<sum1 +sum2;
break;
case '-' :
cout<<"SUBTRACTION OF TWO NUMBERS (a-b) :" <<sum1-sum2;
break;
case '*' :
cout<<"MULTIPLY OF TWO NUMBERS (a*b) :" <<sum1*sum2;
break;
case '/' :
cout<<"DIVIDE OF TWO NUMBERS (a/b) :" <<sum1/sum2;
break;
case '%' :
cout<<"MODULUS OF TWO NUMBERS (a%b) : "<<sum1%sum2;
break;
default :
cout<<"PLEASE ENTER THE VALUE BETWEEN THE (+ or - or * or / or %)";
  }
return 0;
}
