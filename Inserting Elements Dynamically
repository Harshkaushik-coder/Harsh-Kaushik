#include <iostream>
using namespace std;
int main(){
    int size;
    cout<<"enter the size of array :";
    cin>>size;
    int array[size];
    for(int i=0;i<size;i++){
        cout<<"enter the element of array :";
cin>>array[i];

    }
    for(int i=0; i<size;i++){
        cout<<array[i]<<" ";

    }
    cout<<endl;
    int position;
    cout<<"enter the position :";
    cin>>position;
    int number;
cout<<"enter the number :";
    cin>>number;
    for(int i=size-1;i>=position;i--){
        array[i+1]=array[i];

    }
   array[ position]=number;
   size++;
   cout<<"enter the array are :";
   for(int i=0;i<size;i++){
    cout<<array[i]<<" ";
   }
   return 0;
}
